<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shadow_background">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rocketListItemIV"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:padding="7dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="10dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


    <TextView
        android:id="@+id/rocketNameListItemTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rocketListItemIV"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:text="Title" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ic_first_flight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="18dp"
        android:padding="7dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_first_flight"
        app:layout_constraintStart_toEndOf="@+id/rocketListItemIV"
        app:layout_constraintTop_toBottomOf="@+id/rocketNameListItemTV"
        app:riv_corner_radius="10dp" />

    <TextView
        android:id="@+id/rocketTypeListItemTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/ic_first_flight"
        app:layout_constraintTop_toBottomOf="@+id/rocketNameListItemTV"
        tools:text="Description" />

    <TextView
        android:id="@+id/rocketIdListItemTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/rocketListItemIV"
        app:layout_constraintTop_toBottomOf="@+id/rocketTypeListItemTv"
        tools:text="Description 2" />

</androidx.constraintlayout.widget.ConstraintLayout>